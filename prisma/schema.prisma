generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  sessions     Session[]
  cart         Cart?
}

model Session {
  id        String   @id
  userId    Int
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model CartLineItem {
  id              String @id
  cartId          String
  cart            Cart   @relation(fields: [cartId], references: [id], onDelete: Cascade)
  sanityProductId String
  title           String
  price           Float
  quantity        Int
  image           String
}

model Cart {
  id     String         @id
  userId Int?           @unique
  user   User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
  items  CartLineItem[]
}
